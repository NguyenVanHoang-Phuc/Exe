<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MINIBIT</title>
    <meta name="description" content="Quản lý tài chính cá nhân dễ dàng như trò chơi với MiniBit" />
    <meta name="keywords" content="quản lý tài chính, tiết kiệm, chi tiêu, MiniBit" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/minibit.css" rel="stylesheet" asp-append-version="true" />

    <!-- Icon Fonts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet (đảm bảo đã có file) -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/LogoMiniBit.png">

    @RenderSection("PageStyles", required: false)
</head>

<body>
    @{
    var signedIn = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? "Tài khoản";

    // Premium theo Role/Claim (không cần DI)
    var isPremium =
    (User?.IsInRole("Premium") ?? false) ||
    (User?.HasClaim("is_premium","true") ?? false) ||
    (User?.HasClaim("IsPremium","true") ?? false);

    // Số thông báo chưa đọc (controller có thể set ViewBag.UnreadCount; mặc định 0)
    var unread = (int?)ViewBag.UnreadCount ?? 0;
    }
    <!-- Header Start -->
    <header class="minibit-header">
        <div class="container-fluid p-0">
            <!-- Thêm navbar-dark bg-dark để hiện toggler icon -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white px-lg-5 minibit-header-v2 sticky-top">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action(" Index", "Home" )">
                    <img src="~/images/LogoMiniBit.png" alt="MiniBit" class="minibit-logo me-3">
                    <div>
                        <h1 class="minibit-title mb-0">MINIBIT</h1>
                        <small class="minibit-subtitle">Quản lý ví – cực easy</small>
                    </div>
                </a>
                <button class="navbar-toggler me-4" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action(" HomePage", "Account" )">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i
                                    class="fas fa-wallet me-1"></i>Chi tiêu</a></li>
                        <li class="nav-item"><a class="nav-link" href="#goals"><i class="fas fa-bullseye me-1"></i>Mục
                                tiêu</a></li>
                        <li class="nav-item"><a class="nav-link" href="#analytics"><i
                                    class="fas fa-chart-line me-1"></i>Phân tích</a></li>
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        @if (signedIn)
                        {
                        <!-- Notifications -->
                        <div class="dropdown">
                            <button class="notification-bell position-relative dropdown-toggle" id="notificationBell"
                                type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <!-- Hiện badge cả khi = 0 -->
                                <span
                                    class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                    id="notificationBadge">@unread</span>
                                <span class="visually-hidden">Thông báo</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="notificationBell"
                                id="notificationDropdown" style="min-width: 18rem;">
                                <div class="dropdown-header border-bottom py-2 px-3">
                                    <h6 class="mb-0">Thông báo</h6>
                                </div>
                                <div class="notification-list" id="notificationList">
                                    <div class="dropdown-item-text text-center text-muted py-3">
                                        @(unread > 0 ? "Bạn có thông báo chưa đọc" : "Không có thông báo mới")
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- User Menu -->
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i>@userName
                                @if (Context.Session.GetInt32("IsPremium") == 1)
                                {
                                <span class="badge bg-warning text-dark ms-2">
                                    <i class="fas fa-crown me-1"></i>Premium
                                </span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user-cog me-2"></i>Cài đặt</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                        href='@Url.Action("FAQ","Home", new { tab = "faq" })#pane-faq'>
                                        <i class="fas fa-question-circle me-2"></i>Hỗ trợ
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <!-- Khuyến nghị: Logout dùng POST -->
                                    <form method="post" action='@Url.Action("Logout","Account")' class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button class="dropdown-item" type="submit">
                                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>

                        <!-- Premium -->
                        @if (!isPremium)
                        {
                        <button class="btn btn-warning text-dark" data-bs-toggle="modal" data-bs-target="#premiumModal">
                            <i class="fas fa-crown me-2"></i>
                            <span id="premiumText">Nâng cấp Premium</span>
                            <small class="d-block">29k/tháng</small>
                        </button>
                        }
                        else
                        {
                        <a class="btn btn-warning text-dark disabled" tabindex="-1" aria-disabled="true">
                            <i class="fas fa-crown me-2"></i> Premium
                        </a>
                        }
                        }
                        else
                        {
                        <!-- CHƯA ĐĂNG NHẬP: chỉ Login / Register -->
                        <a class="btn btn-outline-primary" href='@Url.Action("Login","Account")'>
                            <i class="fas fa-right-to-bracket me-1"></i> Đăng nhập
                        </a>
                        <a class="btn btn-primary" href='@Url.Action("SignUp","Account")'>
                            <i class="fas fa-user-plus me-1"></i> Đăng ký
                        </a>
                        }
                    </div>

                </div>
            </nav>

            <div id="finance-container" style="
            position: absolute;
            top: 120px; /* Điều chỉnh giá trị này để thay đổi khoảng cách từ trên xuống */
            left: 25%;
            transform: translateX(-50%);
            max-width: 672px;
            width: 90%; /* Để khối responsive tốt hơn trên màn hình nhỏ */
            background:white;
            border-radius:16px;
            box-shadow:0 10px 15px -3px rgba(0,0,0,0.1),0 4px 6px -2px rgba(0,0,0,0.05);
            padding:24px;
            z-index: 1000; /* Đảm bảo nó nằm trên các phần tử khác */
        ">
                <h2 style="font-size:24px; font-weight:bold; color:#1f2937; margin:0 0 16px 0;">Chi tiêu tháng này</h2>

                <div style="display:flex; flex-direction:column; gap:12px;">
                    <div style="background:#e5e7eb; height:40px; border-radius:12px; overflow:hidden; position:relative;">
                        <div id="finance-progress-bar" style="width:0%; height:100%; border-radius:12px; display:flex; align-items:center; justify-content:center; font-weight:600; color:white; transition:width 0.7s cubic-bezier(0.4,0,0.2,1);">
                            <span id="finance-status-text" style="padding:0 8px; filter:drop-shadow(0 1px 2px rgba(0,0,0,0.3));"></span>
                        </div>
                    </div>
                    <div style="display:flex; justify-content:space-between; font-size:14px;">
                        <span id="finance-details" style="color:#4b5563;"></span>
                        <span id="finance-percent" style="font-weight:bold; color:#1f2937;"></span>
                    </div>
                </div>
            </div>


            <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="w-100" src="~/images/background.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="title mx-5 px-5">
                                <div class="title-center">
                                    <h5>Xin chào</h5>
                                    <h1 class="display-1">Quản lý chi tiêu dễ dàng</h1>
                                </div>
                            </div>
                            <p class="fs-5 mb-5">Kiểm soát tài chính thông minh.<br> Theo dõi thu nhập, chi tiêu, ngân
                                sách chỉ với vài cú chạm.</p>
                            <a href="#" class="btn btn-outline-primary border-2 py-3 px-5">Bắt đầu ngay</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="w-100" src="~/images/background2.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="title mx-5 px-5">
                                <div class="title-center">
                                    <h5>Welcome</h5>
                                    <h1 class="display-1">Báo cáo trực quan</h1>
                                </div>
                            </div>
                            <p class="fs-5 mb-5">Hiểu rõ thói quen chi tiêu.<br> Biểu đồ và thống kê giúp bạn đưa ra
                                quyết định tài chính tốt hơn..</p>
                            <a href="#" class="btn btn-outline-primary border-2 py-3 px-5">Khám phá ngay</a>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </header>
    <!-- Header End -->

    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer py-5">
        <div class="container text-center py-5">
            <a href="@Url.Action(" Index", "Home" )">
                <h1 class="display-4 mb-3 text-white text-uppercase">
                    <i class="fa-regular fa-face-smile me-1"></i>Minibit
                </h1>
            </a>
            <div class="d-flex justify-content-center mb-4">
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i
                        class="fab fa-x-twitter"></i></a>
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i
                        class="fab fa-facebook-f"></i></a>
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i
                        class="fab fa-youtube"></i></a>
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i
                        class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-outline-primary border-2 btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Các lib dưới đây chỉ giữ nếu bạn thực sự dùng -->
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>

    <script>
        async function loadFinanceSummary() {
            try {
                const res = await fetch('/api/budget');
                if (res.status === 401) return;

                const data = await res.json();
                const budget = data.budgetMonth ?? 0;
                const spent = data.spentAmount ?? 0;
                const remaining = budget - spent;
                let percent = budget > 0 ? (remaining / budget) * 100 : 0;
                percent = Math.max(0, Math.min(percent, 100));

                const progressBar = document.getElementById('finance-progress-bar');
                const statusText = document.getElementById('finance-status-text');
                const detailsText = document.getElementById('finance-details');
                const percentText = document.getElementById('finance-percent');

                // Color gradient
                if (percent <= 20) progressBar.style.background = 'linear-gradient(90deg,#dc2626,#ef4444)';
                else if (percent <= 40) progressBar.style.background = 'linear-gradient(90deg,#ea580c,#f97316)';
                else if (percent <= 60) progressBar.style.background = 'linear-gradient(90deg,#d97706,#f59e0b)';
                else if (percent <= 80) progressBar.style.background = 'linear-gradient(90deg,#16a34a,#22c55e)';
                else progressBar.style.background = 'linear-gradient(90deg,#15803d,#16a34a)';

                // Update text & width
                statusText.textContent = `Còn lại: ${remaining.toLocaleString()} VND`;
                detailsText.textContent = `Đã chi: ${spent.toLocaleString()} / ${budget.toLocaleString()} VND`;
                percentText.textContent = `${percent.toFixed(1)}%`;
                progressBar.style.width = `${percent}%`;

                document.getElementById('finance-container').style.display = 'block';
            } catch {
                document.getElementById('finance-container').style.display = 'none';
            }
        }

        document.addEventListener('DOMContentLoaded', loadFinanceSummary);
    </script>



    <script>
                        (function ($) {
            "use strict";


            // Initiate the wowjs
            new WOW().init();


            // Back to top button
            $(window).scroll(function () {
                if ($(this).scrollTop() > 300) {
                    $('.back-to-top').fadeIn('slow');
                } else {
                    $('.back-to-top').fadeOut('slow');
                }
            });
            $('.back-to-top').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 1500, 'easeInOutExpo');
                return false;   
            });


            // Testimonials carousel
            $('.testimonial-carousel').owlCarousel({
                autoplay: true,
                smartSpeed: 1000,
                loop: true,
                nav: false,
                dots: true,
                items: 1,
                dotsData: true,
            });
        })(jQuery);

        (function () {
            const url = new URL(window.location.href);
            const tab = (url.searchParams.get('tab') || 'faq').toLowerCase();
            const targetBtn = document.querySelector(tab === 'contact' ? '#tab-contact' : '#tab-faq');
            if (targetBtn && window.bootstrap) new bootstrap.Tab(targetBtn).show();
        })();
    </script>
    <script src="~/js/minibit.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_PartialViews/_PremiumModal")

</body>

</html>