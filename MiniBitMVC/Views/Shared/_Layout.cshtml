<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MINIBIT</title>
    <meta name="description" content="Quản lý tài chính cá nhân dễ dàng như trò chơi với MiniBit" />
    <meta name="keywords" content="quản lý tài chính, tiết kiệm, chi tiêu, MiniBit" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/minibit.css" rel="stylesheet" asp-append-version="true" />

    <!-- Icon Fonts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet (đảm bảo đã có file) -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/LogoMiniBit.png">

    @RenderSection("PageStyles", required: false)
</head>
<body>
    <!-- Spinner End -->
    <!-- Header Start -->
    <header class="minibit-header">
        <div class="container-fluid p-0">
            <!-- Thêm navbar-dark bg-dark để hiện toggler icon -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white px-lg-5 minibit-header-v2 sticky-top">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/images/LogoMiniBit.png" alt="MiniBit" class="minibit-logo me-3">
                    <div>
                        <h1 class="minibit-title mb-0">MINIBIT</h1>
                        <small class="minibit-subtitle">Quản lý ví – cực easy</small>
                    </div>
                </a>
                <button class="navbar-toggler me-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("HomePage", "Account")">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-wallet me-1"></i>Chi tiêu</a></li>
                        <li class="nav-item"><a class="nav-link" href="#goals"><i class="fas fa-bullseye me-1"></i>Mục tiêu</a></li>
                        <li class="nav-item"><a class="nav-link" href="#analytics"><i class="fas fa-chart-line me-1"></i>Phân tích</a></li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <!-- Notifications (bọc đúng .dropdown) -->
                        <div class="dropdown">
                            <button class="notification-bell position-relative dropdown-toggle" id="notificationBell" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notificationBadge">0</span>
                                <span class="visually-hidden">Thông báo</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="notificationBell" id="notificationDropdown" style="min-width: 18rem;">
                                <div class="dropdown-header border-bottom py-2 px-3">
                                    <h6 class="mb-0">Thông báo</h6>
                                </div>
                                <div class="notification-list" id="notificationList">
                                    <div class="dropdown-item-text text-center text-muted py-3">
                                        Không có thông báo mới
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- User Menu -->
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i>Tài khoản
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user-cog me-2"></i>Cài đặt</a></li>
                                <li>
                                    <a class="dropdown-item"
                                       href='@Url.Action("FAQ", "Home", new { tab = "faq" })#pane-faq'>
                                        <i class="fas fa-question-circle me-2"></i>Hỗ trợ
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </div>

                        <!-- Premium Button -->
                        <button class="btn btn-warning text-dark"
                                data-bs-toggle="modal"
                                data-bs-target="#premiumModal">
                            <i class="fas fa-crown me-2"></i>
                            <span id="premiumText">Nâng cấp Premium</span>
                            <small class="d-block">29k/tháng</small>
                        </button>
                    </div>
                </div>
            </nav>

            <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner"> 
                    <div class="carousel-item active">
                        <img class="w-100" src="~/images/background.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="title mx-5 px-5">
                                <div class="title-center">
                                    <h5>Xin chào</h5>
                                    <h1 class="display-1">Quản lý chi tiêu dễ dàng</h1>
                                </div>
                            </div>
                            <p class="fs-5 mb-5">Kiểm soát tài chính thông minh.<br> Theo dõi thu nhập, chi tiêu, ngân sách chỉ với vài cú chạm.</p>
                            <a href="#" class="btn btn-outline-primary border-2 py-3 px-5">Bắt đầu ngay</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="w-100" src="~/images/background2.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="title mx-5 px-5">
                                <div class="title-center">
                                    <h5>Welcome</h5>
                                    <h1 class="display-1">Báo cáo trực quan</h1>
                                </div>
                            </div>
                            <p class="fs-5 mb-5">Hiểu rõ thói quen chi tiêu.<br> Biểu đồ và thống kê giúp bạn đưa ra quyết định tài chính tốt hơn..</p>
                            <a href="#" class="btn btn-outline-primary border-2 py-3 px-5">Khám phá ngay</a>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </header>
    <!-- Header End -->

    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer py-5">
        <div class="container text-center py-5">
            <a href="@Url.Action("Index", "Home")">
                <h1 class="display-4 mb-3 text-white text-uppercase">
                    <i class="fa-regular fa-face-smile me-1"></i>Minibit
                </h1>
            </a>
            <div class="d-flex justify-content-center mb-4">
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i class="fab fa-x-twitter"></i></a>
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i class="fab fa-youtube"></i></a>
                <a class="btn btn-lg-square btn-outline-primary border-2 m-1" href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-outline-primary border-2 btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Các lib dưới đây chỉ giữ nếu bạn thực sự dùng -->
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>

    <script>
                        (function ($) {
            "use strict";


            // Initiate the wowjs
            new WOW().init();


            // Back to top button
            $(window).scroll(function () {
                if ($(this).scrollTop() > 300) {
                    $('.back-to-top').fadeIn('slow');
                } else {
                    $('.back-to-top').fadeOut('slow');
                }
            });
            $('.back-to-top').click(function () {
                $('html, body').animate({scrollTop: 0}, 1500, 'easeInOutExpo');
                return false;
            });


            // Testimonials carousel
            $('.testimonial-carousel').owlCarousel({
                autoplay: true,
                smartSpeed: 1000,
                loop: true,
                nav: false,
                dots: true,
                items: 1,
                dotsData: true,
            });
        })(jQuery);

        (function () {
          const url = new URL(window.location.href);
          const tab = (url.searchParams.get('tab') || 'faq').toLowerCase();
          const targetBtn = document.querySelector(tab === 'contact' ? '#tab-contact' : '#tab-faq');
          if (targetBtn && window.bootstrap) new bootstrap.Tab(targetBtn).show();
        })();
    </script>
    <script src="~/js/minibit.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_PartialViews/_PremiumModal")

</body>
</html>
