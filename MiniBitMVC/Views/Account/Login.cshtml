@model MiniBitMVC.ViewModels.LoginFormViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null;
}

<link href="~/css/Auth.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<div class="login-container">
    <!-- Brand Section -->
    <div class="brand-section">
        <div class="brand-logo">
            <img src="~/images/LogoMiniBit.png" alt="MINIBIT Logo" />
        </div>
        <h1 class="brand-title">Quản lý ví- Cực easy</h1>
    </div>

    <!-- Login Section -->
    <div class="login-section">
        <div class="login-form-container">
            <h2 class="login-title">Đăng Nhập</h2>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success text-center">@ViewBag.Message</div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                <partial name="_ValidationScriptsPartial" />
                <div class="form-group">
                    <label class="form-label" for="Email">
                        <span class="required">*</span> Email
                    </label>
                    <input class="form-input" asp-for="Email" placeholder="Nhập Email của bạn" />
                    <span class="text-danger small"></span>
                </div>

                <div class="form-group password-field">
                    <label class="form-label" for="Password">
                        <span class="required">*</span> Mật khẩu
                    </label>

                    <div class="pwd-inner">
                        <input id="Password" name="Password" type="password"
                               class="form-input form-control pe-5"
                               placeholder="Nhập Mật khẩu" asp-for="Password" required />
                        <button type="button" id="togglePassword" class="btn-eye" aria-label="Hiện/ẩn mật khẩu">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                    </div>

                    <span class="text-danger small"></span>
                </div>

                <div class="form-row-between">
                    <label class="checkbox">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <span>Ghi nhớ mật khẩu</span>
                    </label>

                    <a class="link-muted" href="@Url.Action("ForgotPassword", "Auth")">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="login-btn">Đăng Nhập</button>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="text-danger text-center mt-2">@ViewBag.Error</div>
                }
            </form>

            <div class="divider"><span>HOẶC</span></div>

            <!-- Google Login Button -->
            <form asp-action="GoogleLogin" asp-controller="Account" method="post" class="mb-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@Model?.ReturnUrl" />
                <button type="submit" class="oauth-btn google">
                    <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google icon" />
                    <span>Đăng nhập với Google</span>
                </button>
            </form>

            <div class="register-link">
                Bạn chưa có tài khoản?
                <a href="@Url.Action("SignUp", "Account")">Đăng kí</a>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
      const pwd = document.getElementById('Password');
      const btn = document.getElementById('togglePassword');
      if (!pwd || !btn) return;

      btn.addEventListener('click', function () {
        const show = pwd.type === 'password';
        pwd.type = show ? 'text' : 'password';
        btn.innerHTML = show
          ? '<i class="fa-solid fa-eye-slash"></i>'
          : '<i class="fa-solid fa-eye"></i>';
        btn.setAttribute('aria-pressed', show.toString());
      });
    })();
</script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
