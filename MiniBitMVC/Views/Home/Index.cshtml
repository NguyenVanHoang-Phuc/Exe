                        const up = diff>0;
                        el.classList.toggle('text-danger', up);
                        el.classList.toggle('text-success', !up);
                        el.textContent = `So với tháng trước: ${up?'+':''}${f(diff)}`;
                      }
                    }
                  }
                })();
